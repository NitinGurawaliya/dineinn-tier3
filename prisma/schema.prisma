enum DishType {
  VEG
  NON_VEG
}

model DishView{
  id      Int    @id @default(autoincrement())
  dishId  Int
  timestamp DateTime @default(now()) 
  dish    Dishes   @relation(fields: [dishId],references: [id],onDelete: Cascade)
}

